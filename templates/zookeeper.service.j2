[Unit]
Description=Zookeeper
After=network.target

[Service]
Restart=on-failure
Environment="JAVA_HOME={{ kafka_java_home }}"
ExecStart={{ kafka_install_path }}/bin/zookeeper-server-start.sh {{ kafka_conf_path }}/zookeeper.properties
ExecStop={{ kafka_install_path }}/bin/zookeeper-server-stop.sh
User={{ kafka_user }}

[Install]
WantedBy=multi-user.target
