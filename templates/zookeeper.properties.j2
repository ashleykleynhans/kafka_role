##
# {{ ansible_managed }}

tickTime=2000
initLimit=10
syncLimit=5

dataDir={{ kafka_zookeeper_data_path }}
# the port at which the clients will connect
clientPort={{ kafka_zookeeper_client_port }}
# disable the per-ip limit on the number of connections since this is a non-production config
maxClientCnxns={{ kafka_zookeeper_max_connections }}
# Disable the adminserver by default to avoid port conflicts.
# Set the port to something non-conflicting if choosing to enable this
admin.enableServer=false
# admin.serverPort={{ kafka_zookeeper_admin_port }}

{% if groups['kafka_hosts'] is defined %}
{% for server_ip in groups['kafka_hosts'] | map('extract', hostvars, ['ansible_all_ipv4_addresses']) | flatten %}
server.{{ loop.index }}={{ server_ip }}:{{ kafka_zookeeper_peer_port }}:{{ kafka_zookeeper_leader_port }}
{% endfor %}
{% endif %}
